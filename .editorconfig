# EditorConfig is awesome: http://EditorConfig.org

root = true

[*.json]
indent_style = space
end_of_line = lf
charset = utf-8
max_line_length= off
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
max_line_length= 90
insert_final_newline = true
trim_trailing_whitespace = true
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.md]
trim_trailing_whitespace = false
